@using SITTO_WebPortal.Lib;
@{
    var data = ViewBag.KnowledgeCategory as List<M_NewCategory>;
    //var listKnowAgri = data?.Where(x => x.id == CommonConstants.CATEGORYCODE_KNOWLEDGE_AGRICULTURAL).Select(y => y.childObj).FirstOrDefault().ToList();
    var dataId = data?.FirstOrDefault(x => x.id == CommonConstants.CATEGORYCODE_KNOWLEDGE_AGRICULTURAL)?.childObj?.ToList();
    var listKnowAgri = dataId?.OrderBy(or => or.reOrder).ToList();
}

<section class="product-section-3" data-id="@CommonConstants.CATEGORYCODE_KNOWLEDGE_AGRICULTURAL" id="div_knowledge_js">
    <div class="container-fluid-lg">
        <div class="title">
            <h2>KIẾN THỨC NÔNG NGHIỆP</h2>
        </div>
        <div class="title title-flex-2">
            <ul class="nav nav-tabs scroll_nav_css tab-style-color-2 tab-style-color" id="myTab">

                @if (listKnowAgri != null && listKnowAgri.Any())
                {
                    <li class="nav-item">
                        <button value="11" data-url="kien-thuc-nong-nghiep" onclick="OnchangeListKnowledgeHotAgricultural(this, event, 11)" class="nav-link btn text-uppercase active btn_category_knowledge_agricultural">
                            Tất cả
                        </button>
                    </li>
                    for (int i = 0; i < listKnowAgri.Count; i++)
                    {
                        <li class="nav-item">
                            <button value="@listKnowAgri[i].id" data-url="@listKnowAgri[i].metaUrl" onclick="OnchangeListKnowledgeHotAgricultural(this, event, @listKnowAgri[i].id)" class="nav-link btn btn_category_knowledge_agricultural text-uppercase">
                                @listKnowAgri[i].name
                            </button>
                        </li>
                    }
                }

            </ul>
        </div>
        <div class="row">
            <div class="col-12">
                <!--arrow-slider -->@*img-slider*@
                <div class="arrow-slider product-wrapper" id="div_knowledge_Agricultural">
                    @if (listKnowAgri != null)
                    {
                        <div class="d-flex align-items-center flex-column">
                            <img class="w-auto d-flex m-auto" src="/img_dev/error/datanull.jpg" style="width:80px; height:80px;">
                            <span class="text-muted">Không có dữ liệu!</span>
                        </div>
                    }
                </div>
                <div class="div_btn_slide_product">
                    <button class="prev-btn_knowledge">  <i class="fas fa-chevron-left"></i></button>
                    <button class="next-btn_knowledge"> <i class="fas fa-chevron-right"></i></button>
                </div>
            </div>
        </div>
        <div class="row text-center p-3"><a href="javascript:void(0)" onclick="RedirectToKnowAgricultural(this)" id="btn_all_know_agricultural" data-url="">Xem thêm</a></div>
    </div>
</section>
